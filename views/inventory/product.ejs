<!-- Message Block -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { 
        if (error.msg !== 'Invalid value') { %>
            <li><%= error.msg %></li>
        <% } 
    }) %>
   </ul>
<% } %>
