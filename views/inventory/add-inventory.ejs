<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
  } %>
  
  <%- messages() %>


<div class="form">
    <form action="/inv/addvehicle" method="post">
      <label for="classification_id">Classification: </label>
      <%- inventory %>

        <label for="inv_make">Make: </label>
        <input type="text" required placeholder="min of 3 characters" name="inv_make" id="inv_make"
          title="Enter Make" pattern=".{3,}" value="<%= locals.inv_make %>">

        <label for="inv_model">Model: </label>
        <input type="text" required placeholder="min of 3 characters" name="inv_model" id="inv_model"
          title="Enter Model" pattern=".{3,}" value="<%= locals.inv_model %>">

        <label for="inv_description">Description</label>
        <textarea value="<%= locals.inv_description %>" name="inv_description" id="inv_description" cols="30"
          rows="5" placeholder="Enter vehicle description" required></textarea>

        <label for="inv_image">Image path: </label>
        <input type="text" readonly value="/images/vehicles/no-image.png" name="inv_image" id="inv_image">

        <label for="inv_thumbnail">thumbnail path: </label>
        <input type="text" readonly value="/images/vehicles/no-image-tn.png" name="inv_thumbnail" id="inv_thumbnail">

        <label for="inv_price">Price:</label>
        <input type="text" required id="inv_price" name="inv_price" placeholder="digits or decimal"
          pattern="\d+(\.\d+)?" title="Please enter a valid decimal number" value="<%= locals.inv_price %>">

        <label for="inv_year">Year: </label>
        <input type="text" pattern="\d{4}" title="Please enter a 4-digit number" required id="inv_year"
          name="inv_year" value="<%= locals.inv_year %>">

        <label for="inv_miles">Mileage: </label>
        <input type="text" pattern="\d+" id="inv_miles" name="inv_miles" required placeholder="Enter Milage"
          title="Enter a valid number" title="Please enter a valid integer" value="<%= locals.inv_miles %>">

        <label for="inv_color">Color: </label>
        <input type="text" id="inv_color" name="inv_color" required placeholder="Enter Milage"
          title="Enter a valid number" title="Please enter a valid integer" value="<%= locals.inv_color %>">

        <input type="submit" value="Add" id="submit">
    </form>
  </div>